<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_ivStatus"
        android:onClick="onImgClick"
        android:src="@drawable/abc_btn_check_to_on_mtrl_000"
        android:maxHeight="80dp"
        android:maxWidth="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/strTodoDescription"
        android:id="@+id/item_tvDescription"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/strStatus"
        android:textStyle="italic"
        android:textSize="12dp"
        android:id="@+id/item_tvDue"
        android:layout_alignBottom="@+id/item_tvDescription"
        android:layout_alignParentStart="true" />
</RelativeLayout>
